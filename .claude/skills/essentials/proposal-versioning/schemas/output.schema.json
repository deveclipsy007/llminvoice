{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "proposal-versioning-output",
  "type": "object",
  "required": ["skill", "inputs", "outputs", "risk_label"],
  "properties": {
    "skill": { "const": "proposal-versioning" },
    "inputs": {
      "type": "object",
      "required": ["proposal_id", "new_version_payload"],
      "properties": {
        "proposal_id": { "type": "integer", "minimum": 1 },
        "new_version_payload": { "type": "object" },
        "approval_policy": { "type": "string" }
      }
    },
    "outputs": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "risk_label": { "enum": ["safe", "caution", "dangerous"] }
  }
}

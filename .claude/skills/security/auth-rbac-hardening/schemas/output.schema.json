{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "auth-rbac-hardening-output",
  "type": "object",
  "required": ["skill", "inputs", "outputs", "risk_label"],
  "properties": {
    "skill": { "const": "auth-rbac-hardening" },
    "inputs": {
      "type": "object",
      "required": ["routes_to_protect", "roles_matrix"],
      "properties": {
